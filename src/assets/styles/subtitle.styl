.subtitle
  position relative
  margin-top -57px
  text-align center

  &__icon
    margin 0 auto
    position relative
    width 62px
    height 62px
    overflow hidden
    background-color #304fff
    color #fefefe
    border-radius 50%
    box-shadow 0 6px 10px rgba(0, 0, 0, .2)
    transition all .2s ease 0s

    &--timeline
      margin 0 auto 30px

    i
      width 100%
      height 100%

  &__name
    margin 15px 0
    display block
    font-weight 400
    font-size 17px
